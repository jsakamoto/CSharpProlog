    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": ".NET Core Launch (system console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PL.NETcore/bin/Debug/netcoreapp2.0/PL.NETcore.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PL.NETcore/",
            "console": "externalTerminal",
            "stopAtEntry": false,
            //"internalConsoleOptions": "openOnSessionStart"
        }
    ]
}